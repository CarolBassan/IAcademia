<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backgroudacademia"
    android:padding="16dp"
    tools:context=".tela_feedback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/rounded_scrollview"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTituloFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Deixe seu Feedback"
                android:textAlignment="center"
                android:textColor="#8d0000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etComentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:hint="ComentÃ¡rio"
                android:inputType="textMultiLine"
                android:lines="4"
                android:maxLines="5"
                android:gravity="top|start"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edittext"
                android:hint="Nota (1 a 5)"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSalvarFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFFFFF"
        android:text="Salvar Feedback"
        android:textColor="#8d0000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnVoltarFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:text="Voltar"
        android:textColor="#8d0000"
        android:textSize="16sp" />

</LinearLayout>
